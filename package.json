{
  "name": "tree-sitter-kraken",
  "version": "0.9.2",
  "description": "Tree-sitter grammar for the Kraken programming language",
  "main": "bindings/node",
  "types": "bindings/node/index.d.ts",
  "keywords": [
    "tree-sitter",
    "parser",
    "kraken",
    "kraken-lang",
    "syntax"
  ],
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ],
  "author": "James Gober <code@jamesgober.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kraken-lang/tree-sitter-kraken.git"
  },
  "homepage": "https://github.com/kraken-lang/tree-sitter-kraken",
  "bugs": {
    "url": "https://github.com/kraken-lang/tree-sitter-kraken/issues"
  },
  "scripts": {
    "build": "tree-sitter generate && node-gyp build",
    "test": "tree-sitter test",
    "parse": "tree-sitter parse",
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "dependencies": {
    "node-addon-api": "^7.1.0",
    "node-gyp-build": "^4.8.0"
  },
  "peerDependencies": {
    "tree-sitter": "^0.21.0"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "devDependencies": {
    "tree-sitter-cli": "^0.22.0",
    "prebuildify": "^6.0.0"
  },
  "tree-sitter": [
    {
      "scope": "source.kraken",
      "file-types": [
        "kr"
      ],
      "highlights": "queries/highlights.scm"
    }
  ]
}
